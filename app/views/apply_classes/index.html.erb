<!doctype html>
<html lang="en">

	<body>
		<div class="page-banner">
			<div class="hvrbox">
				<img src="/assets/desktop.jpg" alt="Mountains" class="hvrbox-layer_bottom">
				<div class="hvrbox-layer_top">
					<div class="container">
						<div class="overlay-text text-left">
							<h3>Enroll - CyberCity Summer School 2019</h3>

						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="sign-in-1x">
			<div class="container">
				<div class="form-container">
					<div class="row">
						<div class="col-md-6">
							<div class="sign-in-form">

								<!-- <h3>Hello, <%#= current_user.first_name  %> -->
								<br>
								</h3>

								<%= simple_form_for(@apply_class) do |f| %>
								<form>
									<div class="row">

										<div class="col-md-12">
											<div class="single-input">
												<label >Your Fullname</label>

												<div class="form-group">
													<%= f.input :fullname, :label => false,placeholder: "",as: :text,input_html: { class: "form-group", row: "2"} %>
												</div>
											</div>
										</div>

										<div class="col-md-12">
											<div class="single-input">
												<label >Your Mobile Number</label>

												<div class="form-group">
													<%= f.input :mobile, :label => false,placeholder: "",as: :text,input_html: { class: "form-group" } %>
												</div>
											</div>
										</div>
										
										<div class="col-md-12">
											<div class="single-input">
												<label >Your Email</label>

												<div class="form-group">
													<%= f.input :email, :label => false,placeholder: "",as: :text,input_html: { class: "form-group" } %>
												</div>
											</div>
										</div>

										<div class="col-md-6">
											<div class="single-input">
												<label >Choose your Skill level</label>

												<div class="form-group">
													<%= f.input :skill_level, :label => false,placeholder: "Skill Level",collection: [['Beginner', 'Beginner'], ['Intermediary', 'Intermediary'],['Advanced', 'Advanced']],label_method: :second, value_method: :first,prompt: 'Select Skill Level',input_html: { class: "form-control"}%>
												</div>
											</div>
										</div>
										<div class="col-md-12">
											<div class="single-input">
												<label >Let us know briefly why you want to join the class and your expectations</label>
												<div class="form-group">

													<%= f.input :reason, :label => false,placeholder: "",as: :text,input_html: { class: "form-group", row: "20" } %>
												</div>
											</div>
										</div>

										<!-- <div class="form-inputs">
										<%#= f.input :user_id, :as=> :hidden, input_html: {value:current_user.id } %>

										</div> -->

										<!-- <div >

										<%#= f.input :student_id, :as=> :hidden, input_html: { value: @student_id } %>

										</div> -->

										<div class="col-md-12">

											<h3>Cost : GHc 300 for 8weeks
											<br>
											<h4>* To be qualified for the class, we require a 50% deposit. You can pay through this mobile money number <a>0559336599 </a>with CYBERCITY as reference</a> or pay through mobile money <a href="https://epaygh.com/pay/cyb-cybercity-school"> here! </h4></h3>

										</div>
										<br/>

										<div class="col-md-12">
											<div class="sign-in-btn sign-up-btn">

												<%= f.button :submit, "Complete Application" ,:class=>"btn-small"%>

											</div>
										</div>
									</div>
								</form>
								<% end %>
							</div>
						</div>
						<div class="col-md-6">
							<div class="sign-in-right sign-up-right">
								<a href="" class="btn-circle video"><i class="fas fa-play"></i></a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="cta-1x">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="cta-content">
							<h3>Ready to Begin?</h3>
							<p>
								Find subjects you're passionate about by browsing our online course categories. Start
								<br>
								learning top courses from industry Experts.
							</p>
							<%= link_to "Start Learning",apply_classes_path,:class=> "btn-small" %>
							<a  class="btn-small">Start Teaching</a>

						</div>
					</div>
				</div>
			</div>
		</div>

	</body>
</html>
