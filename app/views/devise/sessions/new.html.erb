



<body class="background show-spinner no-footer"> 
    <div class="fixed-background"></div>
    <main>
        <div class="container">
            <div class="row h-100">
                <div class="col-12 col-md-10 mx-auto my-auto">
                    <div class="card auth-card">
                        <div class="position-relative image-side">
                            <p class="text-white h2">YOUR HEALTH IN YOUR HANDS</p>
                            <p class="white mb-0">Please use this form to login.<br></p>
                        </div>
                        <div class="form-side"><a href=""><span class="logo-single"></span></a>
                            <h6 class="mb-4">Log In</h6>
                           <!--  <form> -->

                            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


                            <label class="form-group has-float-label mb-4">
                            <%= f.input :email,
                                  required: false,
                                              autofocus: true,
                input_html: { class: "form-control"} %>
                            <!-- <input class="form-control"> -->
                                    <span>Email</span></label> 



                                         <label class="form-group has-float-label mb-4">
                            <%= f.input :password,
                                  required: false,
                                              autofocus: true,
                input_html: { class: "form-control", autocomplete: "current-password"} %>
                            <!-- <input class="form-control"> -->
                                    <span>Password</span></label> 




                                <div class="d-flex justify-content-end align-items-center"><button
                                        class="btn btn-primary btn-lg btn-shadow" type="submit">LOGIN</button></div>

                              <%end %>
                              <%= link_to "Forgot your password?", new_password_path(resource_name) ,:style=>"color: #007bff !important" %>

                      
