<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Course image</th>
      <th>Amount</th>
      <th>Tutor name</th>
      <th>Tutor info</th>
      <th>Course level</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= course.course_image %></td>
        <td><%= course.amount %></td>
        <td><%= course.tutor_name %></td>
        <td><%= course.tutor_info %></td>
        <td><%= course.course_level %></td>
        <td><%= course.category %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to  'Show more'.html_safe, show_details_path(:id => course.id) %>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

