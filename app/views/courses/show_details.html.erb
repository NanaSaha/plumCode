
<!doctype html>
<html lang="en">

  <body>

	<div class="page-banner">           			
        <div class="hvrbox">
             <img src="/assets/desktop.jpg" alt="Mountains" class="hvrbox-layer_bottom">
            <div class="hvrbox-layer_top">
                <div class="container">
                    <div class="overlay-text text-left">						
                        <h3><%= @show_course_details[0].course_name %></h3>
                       
                    </div>
                </div>
            </div>
        </div>	                     
    </div>
    
    <div class="course-single-body">
		<div class="container">
			<div class="course-info-1x course-info-2x">	
				<div class="row">	
					<div class="col-md-4">
						<div class="course-info-left">
							<div class="media">
							 <!--  <img src="" alt="Image"> -->
							  <div class="media-body">
							  	<h3><%= @show_course_details[0].tutor_name %></h3>
								<p>Instructor</p>
							  </div>
							</div>						
						</div>
					</div>	
					<div class="col-md-3">
						<div class="course-info-middle">
							<p>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								&nbsp; 4.9 
							</p>
							<h4></h4>						
						</div>
					</div>
					<div class="col-md-2">
						<div class="course-info-left">
							<div class="media">
							  <div class="media-body">
							  	<h4>Course Duration</h4>
								<p><%= @show_course_details[0].course_duration %></p>
							  </div>
							</div>						
						</div>
					</div>
					<div class="col-md-3">
						<div class="course-info-right">
							<h3><del>GHC400</del>GHC <%= @show_course_details[0].amount %></h3>
							<%= link_to "Join Class",apply_classes_path,:class=> "btn-small" %>
							
						</div>
					</div>				

				</div>
			</div>
		</div>

		<div class="container">	
			<div class="course-details-1x">
				<div class="row">
					<div class="col-md-8">
						<div class="course-details-left">
							<div class="course-video">
								<a href="" class="btn-circle video"><i class="fas fa-play"></i></a>
								<h3>Preview Course</h3>
							</div>
						

							<div class="course-menu-nav">
								<ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
								  <li class="nav-item">
								    <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true"> <i class="far fa-file-alt"></i>  Overview</a>
								  </li>
								  <li class="nav-item">
								    <a class="nav-link" id="curriculum-tab" data-toggle="tab" href="#curriculum" role="tab" aria-controls="curriculum" aria-selected="false"><i class="fas fa-cube"></i> Curriculum</a>
								  </li>
								  <li class="nav-item">
								    <a class="nav-link" id="instructor-tab" data-toggle="tab" href="#instructor" role="tab" aria-controls="instructor" aria-selected="false"><i class="far fa-user"></i> Instructor</a>
								  </li>
								  
								</ul>
								<div class="tab-content course-menu-tab" id="myTabContent">
								  <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
								  	<div class="learning-system">
									  	<!-- <h4>What Will I Learn?</h4> -->
									  	<p><%= @show_course_details[0].course_description %></p>
										
									</div>
									
								  	<div class="price">
								  		<h5><del>GHC400</del><span>GHC300</span></h5>							  		
								  		<%= link_to "Join Class",apply_classes_path,:class=> "btn-small" %>
								  	</div>

								  </div>
								  <div class="tab-pane fade" id="curriculum" role="tabpanel" aria-labelledby="curriculum-tab">
									<div class="learning-system">
									  	<h4>What Will I Learn?</h4>
									  	<p><%= @show_course_details[0].course_description %></p>
										
									</div>
								
																  	
								  </div>
								  <div class="tab-pane fade" id="instructor" role="tabpanel" aria-labelledby="instructor-tab">
								  	<div class="blog-author instructor-profile">
										<div class="media">
										  <!-- <img src="/assets/speaker-1.png" alt="Generic placeholder image"> -->
										  <div class="media-body">
										    <h5><%= @show_course_details[0].tutor_name %></h5>
										    <p><%= @show_course_details[0].tutor_info %></p>							    
										  	<div class="social-link">
												<ul>
													<li class="facebook"><a href="#"> <i class="fab fa-facebook-f"></i> </a></li>
													<li class="pinterest"><a href="#"> <i class="fab fa-pinterest"></i> </a></li>	
													<li class="instagram"><a href="#"> <i class="fab fa-instagram"></i> </a></li>											
													<li class="twitter"><a href="#"> <i class="fab fa-twitter"></i> </a></li>
												</ul>					
											</div>
										  </div>
										</div>							
									</div>
								  </div>
								
								</div>
							</div>

						</div>
					</div>				
					<div class="col-md-4">
						<div class="course-details-sidebar">
							<div class="course-feature">
								<h2>Course Features</h2>
								<ul>
									<!-- <li><i class="far fa-file"></i> Lectures <span> 7 </span></li> -->
									<li><i class="far fa-clock"></i> Duration <span> <%= @show_course_details[0].lecture_hours %> </span></li>
									<li><i class="far fa-user"></i> Students <span> 15 </span></li>
									<li><i class="fas fa-certificate"></i> Certificate  <span> Yes </span></li>
									<li><i class="far fa-lightbulb"></i> Skill  <span> <%= @show_course_details[0].course_level %>  </span></li>
									<li><i class="far fa-bookmark"></i> Category   <span> <%= @show_course_details[0].category %> </span></li>
								</ul>
							</div>
							<div class="footer-social-link">
								<h2>Share via</h2>
								<ul>
									<li><a href="#"> <i class="fab fa-facebook-f"></i> </a></li>	
									<li><a href="#"> <i class="fab fa-instagram"></i> </a></li>		
									<li><a href="#"> <i class="fab fa-twitter"></i> </a></li>
									<li><a href="#"> <i class="fab fa-google-plus-g"></i> </a></li>
								</ul>					
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="related-course-2x">
			<div class="container">
				<div class="col-md-12">
					<div class="row">
						<div class="title-left">
							<h2>Related Courses</h2>
						</div>
					</div>
				</div>

				<div class="related-course">
					<% @courses.each do |course| %>					
					<div class="single-course">
						<div class="hvrbox">
							
							<%= link_to image_tag (course.course_image),:class=> "hvrbox-layer_bottom" %>

							<div class="hvrbox-layer_top hvrbox-text">
								<div class="hvrbox-text">														<%= link_to "Preview Course", show_details_path(:id => course.id) %>
								</div>
							</div>
						</div>
						<div class="single-course-content">
							<%= link_to "#{course.course_name}", show_details_path(:id => course.id) %>
									<p>By <%= course.tutor_name %><span><del>GHC400</del> <b>GHC <%= course.amount%></b></span></p>
									<h3>
										<i class="fas fa-star"></i>
										<i class="fas fa-star"></i>
										<i class="fas fa-star"></i>
										<i class="fas fa-star"></i>
										<i class="fas fa-star"></i> (5)
										
									</h3>
						</div>
					</div>
					<% end %>
				
				</div>
			</div>
		</div>

	</div>

	<div class="cta-1x">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="cta-content">
						<h3>Ready to Begin?</h3>
						<p>Find subjects you're passionate about by browsing our course categories. Start <br> learning with top courses with industry experts.</p>
						<%= link_to "Start Learning",apply_classes_path,:class=> "btn-small" %>
						<a  class="btn-small">Start Teaching</a>
					</div>
				</div>					
			</div>
		</div>
	</div>

    
	
  </body>
</html>       